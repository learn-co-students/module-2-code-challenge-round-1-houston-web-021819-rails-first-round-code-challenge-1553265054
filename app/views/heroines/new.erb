<% if @heroine.errors.any? %>
<ul>
  <% @heroine.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div style="text-align: center">
  <h1>Heroine Creation Form</h1>
</div>

<%= form_for(@heroine) do |f| %>
<div class="form-group">
  <%= f.label "Name:" %>
  <%= f.text_field  :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Alias:" %>
  <%= f.text_field :super_name, class: "form-control"  %>
</div>
<div class="form-group">
  <%= f.label "Power:" %>
  <%= f.collection_select :power_id, @powers, :id, :name  %>
</div>
<div style="text-align: center">
  <%= f.submit %>
</div>
<% end %>
